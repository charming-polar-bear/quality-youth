<div class="container-fluid login header-filter">
  <div class="section section-full-screen section-signup">
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
          <div class="card card-signup">
            <div class="header header-info text-center ">
              <h4>登录</h4>
            </div>
            <p class="text-divider">邮箱登录</p>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="content">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">email</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">E-mail</label>
                    <%= f.text_field :email, type: :email, required: true, autofocus: true, class: "form-control" %>
                  </div>
                </div>

                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">登录密码</label>
                    <%= f.text_field :password, type: :password, required: true, class: "form-control" %>
                  </div>
                </div>

                <div class="input-group">
                  <%= f.input :remember_me, label: false, inline_label: "记住我", as: :boolean if devise_mapping.rememberable? %>
                </div>

              </div>
              <div class="footer text-center">
                <%= f.submit "登录", data: { disable_with: "登录中..." }, class: "btn btn-round btn-info"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
